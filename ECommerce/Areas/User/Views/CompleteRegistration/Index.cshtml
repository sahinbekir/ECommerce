@model RegistrationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/UserLayout/UserLayout.cshtml";
}


<h1>Complete The Registration</h1>
@using(Html.BeginForm("Index", "CompleteRegistration" ,FormMethod.Post)){
	<br />
	@Html.Label("City")
	@Html.DropDownListFor(x=>x.CityId, (List<SelectListItem>) ViewBag.cv, new {@class="form-control"})
	<br />
	@Html.Label("State")
	@Html.DropDownListFor(x=>x.StateId, (List<SelectListItem>) ViewBag.sv, new {@class="form-control"})
	<br />
	@Html.Label("Gender")
	@Html.DropDownListFor(x=>x.GenderId, (List<SelectListItem>) ViewBag.gv, new {@class="form-control"})
	<br />
	<br />

	<button type="submit" class="btn btn-primary submit mb-4">Save</button>
	<br />
}

