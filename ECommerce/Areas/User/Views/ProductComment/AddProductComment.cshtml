<!--Add Comment-->
<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
		<form method="post" action="/User/ProductComment/AddProductComment/">
			<input class="form-control" type="hidden" value="@ViewBag.pid" id="proid" name="ProductId" placeholder="Product Id" required="">
			<input class="form-control" type="text" id="ctitle" name="CommentTitle" placeholder="Comment Title" required="">

			<input class="form-control" type="text" id="cscore" name="Score" placeholder="Score(1-10)" required="">
			<textarea class="form-control" id="ccontent" name="CommentContent" placeholder="Message..." required=""></textarea>
			<input type="submit" id="btnshare" value="Share">
        </form>
    </div>
</div>
<script type="text/javascript">

	$("#btnshare").click(function () {
		let values = {
			ProductId: $('#proid').val(),
			CommentTitle: $("#ctitle").val(),
			Score: $("#cscore").val(),
			CommentContent: $("#ccontent").val()
		};
		$.ajax({
			type: "post",
			url: "/Areas/User/Views/ProductComment/AddProductComment",
			data: values,
			success: function (func) {
				let result = jQuery.parseJSON(func);

			}
		});
	});
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>