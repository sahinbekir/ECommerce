@using EntityLayer.Concrete
@model StockPiece
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/UserLayout/UserLayout.cshtml";
}



<h1>First Stock Detail</h1>




<form method="post">
    <input type="hidden" name="ProductId" value="@ViewBag.pid" class="form-control" />
    <div class="form-group">
        <label>Product Name : @ViewBag.pname</label>
    </div>
    <div class="form-group">
        <label>Stock Remaining Piece</label>
        <input type="text" name="RemainingPiece" class="form-control" />
    </div>

    <button class="btn btn-info">Save</button>
</form>

