@using EntityLayer.Concrete
@model ShoppingCart
@{
    ViewData["Title"] = "ShopDetail";
    Layout = "~/Areas/User/Views/Shared/UserLayout/UserLayout.cshtml";
}

<h1>Shop Detail</h1>

<form method="post">
    <input type="hidden" name="ProductId" value="@ViewBag.pid" class="form-control" />
    <input type="hidden" name="Cost" value="@ViewBag.pcost" class="form-control" />
    <div class="form-group">
        <label>Product Name : @ViewBag.pname</label>
    </div>
    <div class="form-group">
        <label>Shop Piece</label>
        <input type="text" name="Piece" class="form-control" />
    </div>
    <div class="form-group">
        <label>Shop Cost : $@ViewBag.pcost</label>
    </div>

    <button class="btn btn-info">Buy</button>
</form>