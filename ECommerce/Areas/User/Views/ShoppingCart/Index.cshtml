@using EntityLayer.Concrete
@model List<ShoppingCart>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/UserLayout/UserLayout.cshtml";
}

<h1>Shopping Carts</h1>


<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5 style="text-align:center;">All Shop List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Shop User</th>
                                    <th>Shop Product</th>
                                    <th>Shop Cost</th>
                                    <th>Shop Created Date</th>
                                    <th>Shop Updated Date</th>
                                    <th>Is Inactive?</th>
                                    <th style="text-align:center;">Hide</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.UserId</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.Cost</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.IsDeleted</td>
                                        <td style="text-align:center;"><a href="/User/ShoppingCart/HideMyShoppingCart/@item.Id" class="btn btn-warning">Update</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>




