@using EntityLayer.Concrete
@model List<AboutUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}





<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5 style="text-align:center;">All About Us List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>About Us Detail1</th>
                                    <th>About Us Detail2</th>
                                    <th>About Us Image1</th>
                                    <th>About Us Image2</th>
                                    <th>About Us MovieV1</th>
                                    <th>About Us MapLocationV1</th>
                                    <th>About Us Created Date</th>
                                    <th>About Us Updated Date</th>
                                    <th>Is Inactive?</th>
                                    <th style="text-align:center;">Update</th>
                                    <th style="text-align:center;">Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.DetailsV1</td>
                                        <td>@item.DetailsV2</td>
                                        <td>@item.ImageV1</td>
                                        <td>@item.ImageV2</td>
                                        <td>@item.MovieV1</td>
                                        <td>@item.MapLocationV1</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.IsDeleted</td>
                                        <td style="text-align:center;"><a href="/Admin/AdminAboutUs/UpdateAboutUs/@item.Id" class="btn btn-warning">Update</a></td>
                                        <td style="text-align:center;"><a href="/Admin/AdminAboutUs/DeleteAboutUs/@item.Id" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Admin/AdminAboutUs/AddAboutUs/" class="btn btn-primary">Add About Us</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>




