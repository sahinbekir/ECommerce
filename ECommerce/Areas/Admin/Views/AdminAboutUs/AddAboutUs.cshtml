@using EntityLayer.Concrete
@model AboutUs
@{
    ViewData["Title"] = "AddAboutUs";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<h1>Add About Us</h1>

<form method="post">
    <div class="form-group">
        <label>About Us First Detail</label>
        <textarea name="DetailsV1" rows="2" class="form-control" placeholder="About Us First Detail..."></textarea>
    </div>
    <div class="form-group">
        <label>About Us Second Detail</label>
        <textarea name="DetailsV2" rows="2" class="form-control" placeholder="About Us Second Detail..."></textarea>
    </div>
    <div class="form-group">
        <label>About Us Company Name</label>
        <input type="text" name="Company" placeholder="Company" class="form-control" />
    </div>
    <div class="form-group">
        <label>About Us Contact Email</label>
        <input type="email" name="Email" placeholder="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>About Us Contact Phone Number</label>
        <input type="text" name="Phone" placeholder="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>About Us Country</label>
        <input type="text" name="Country" placeholder="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label>About Us State</label>
        <input type="text" name="State" placeholder="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>About Us Map Location</label>
        <input type="url" name="MapLocationV1" placeholder="Map Location" class="form-control" />
    </div>

    <button class="btn btn-info">Save</button>
</form>
