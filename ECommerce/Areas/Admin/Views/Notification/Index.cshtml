@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}








<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5 style="text-align:center;">All Notification List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Notification Type</th>
                                    <th>Notification Title</th>
                                    <th>Notification Detail</th>
                                    <th>Notification Created Date</th>
                                    <th>Notification Updated Date</th>
                                    <th>Is Inactive?</th>
                                    <th style="text-align:center;">Update</th>
                                    <th style="text-align:center;">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.Type</td>
                                        <td>@item.Title</td>
                                        <td>@item.Detail</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.IsDeleted</td>
                                        <td style="text-align:center;"><a href="/Admin/Notification/UpdateNotification/@item.Id" class="btn btn-warning">Update</a></td>
                                        <td style="text-align:center;"><a href="/Admin/Notification/DeleteNotification/@item.Id" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Admin/Notification/AddNotification/" class="btn btn-primary">Add Notification</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>