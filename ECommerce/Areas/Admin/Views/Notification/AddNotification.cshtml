@using EntityLayer.Concrete
@model Notification
@{
    ViewData["Title"] = "AddNotification";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<h1>Add Notification</h1>




<form method="post">
    <div class="form-group">
        <label>Notification Type</label>
        <input type="text" name="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label>Notification Title</label>
        <input type="text" name="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Notification Detail</label>
        <textarea name="Detail" rows="2" class="form-control" placeholder="Notification Detail"></textarea>
    </div>
    <button class="btn btn-info">Share</button>
</form>