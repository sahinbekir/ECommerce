@using EntityLayer.Concrete
@model Notification
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<h1>Update Notification</h1>

<form method="post">
    <input type="hidden" value="@Model.Id" name="Id" class="form-control" />
    <input type="hidden" value="@Model.CreatedDate" name="CreatedDate" class="form-control" />
    <input type="hidden" value="@Model.IsDeleted" name="IsDeleted" class="form-control" />
    <div class="form-group">
        <label>Notification Type</label>
        <input type="text" value="@Model.Type" name="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label>Notification Title</label>
        <input type="text" value="@Model.Title" name="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Notification Detail</label>
        <textarea type="text" name="Detail" rows="2" class="form-control" placeholder="Notification Detail">@Model.Detail</textarea>
    </div>

    <button class="btn btn-info">Update</button>
</form>