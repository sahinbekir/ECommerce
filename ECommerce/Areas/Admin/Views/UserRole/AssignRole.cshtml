@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<h1>Assign Role</h1>

<form method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].roleid" />
            <input type="hidden" asp-for="@Model[i].name" />
            <input type="checkbox" asp-for="@Model[i].exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].exists">@Model[i].name</label>
        </div>

    }
    <br />
    <button class="btn btn-primary">Save</button>
</form>
<br />
<a href="/Admin/UserRole/UserRoleList" class="btn btn-danger">Go To User Role List</a>