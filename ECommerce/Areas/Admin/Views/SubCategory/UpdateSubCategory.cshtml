@using EntityLayer.Concrete
@model SubCategory
@{
    ViewData["Title"] = "UpdateSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}

<h1>Update Sub Category</h1>




<form method="post">
    <input type="hidden" value="@Model.Id" name="Id" class="form-control" />
    <input type="hidden" value="@Model.CreatedDate" name="CreatedDate" class="form-control" />
    <input type="hidden" value="@Model.IsDeleted" name="IsDeleted" class="form-control" />
    <div class="form-group">
        <label>Category Name</label>
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"})
    </div>
    <div class="form-group">
        <label>Sub Category Name</label>
        <input type="text" value="@Model.Name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sub Category Description</label>
        <textarea name="Description" rows="2" class="form-control" placeholder="Category Description">@Model.Description</textarea>
    </div>
    <button class="btn btn-info">Update</button>
</form>