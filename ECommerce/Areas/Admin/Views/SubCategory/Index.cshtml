@using EntityLayer.Concrete
@model List<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/AdminLayout.cshtml";
}


<body>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>All Sub Category List  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Category Name</th>
                                    <th>Sub Category Name</th>
                                    <th>Sub Category Description</th>
                                    <th>Sub Category Created Date</th>
                                    <th>Sub Category Updated Date</th>
                                    <th>Is Inactive?</th>
                                    <th style="text-align:center;">Update</th>
                                    <th style="text-align:center;">Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.CategoryId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.IsDeleted</td>
                                        <td style="text-align:center;"><a href="/Admin/SubCategory/UpdateSubCategory/@item.Id" class="btn btn-warning">Update</a></td>
                                        <td style="text-align:center;"><a href="/Admin/SubCategory/DeleteSubCategory/@item.Id" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Admin/SubCategory/AddSubCategory/" class="btn btn-primary">Add Sub Category</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>



