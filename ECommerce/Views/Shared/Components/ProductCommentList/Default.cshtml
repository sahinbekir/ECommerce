@model IEnumerable<EntityLayer.Concrete.ProductComment>
<div class="row m-t-lg">
    <div class="col-lg-12">
        <div class="ibox ">
            @if (!Model.Any())
            {
                <p style="text-align:center;">Have not comment yet...</p>
            }
            else {
            <div class="ibox-content">

                <div>
                    <div class="chat-activity-list">
                        @foreach (var item in Model)
                        {
                                var time = DateTime.Now - item.CreatedDate;
                                <div class="chat-element">
                                <a href="#" class="float-left">
                                    <img alt="image" class="rounded-circle" src="@item.UserImage">
                                </a>
                                <div class="media-body ">
                                    <small class="float-right text-navy">@item.Score</small>
                                    <strong>@item.UserFullName - @item.UserName</strong>
                                    <br />
                                    <strong>@item.CommentTitle</strong>
                                    <p class="m-b-xs">
                                        @item.CommentContent
                                    </p>
                                        <small class="text-muted">@((((DateTime)item.CreatedDate).ToString("dd.MMM.yyyy"))) - @((time).ToString()) ago.</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>